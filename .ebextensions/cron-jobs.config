files:
  "/var/app/wp-cron.sh":
    mode: "000644"
    owner: root
    group: root
    content: |
      #!/bin/bash
      
      source /etc/profile.d/sh.local
      /usr/bin/php /var/app/current/wp-cron.php >> /var/log/wp-cron.log

  "/etc/cron.d/wp-cron":
    mode: "000644"
    owner: root
    group: root
    content: |
      * * * * * root sh /var/app/wp-cron.sh
      

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/wp-cron.bak"
  remove_old_cron_2:
    command: "rm -f /var/app/wp-cron.sh.bak"